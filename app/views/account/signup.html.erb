
<div class="title">
          Signup
 </div>
<%= form_with model: @user , url: "/account/signup" , method: :post do |f|%>
<div class="input-box">
<i class="fa fa-user"></i>
   <%# <%= f.label 'First Name' %>
    <%= f.text_field :first_name  , placeholder: "Enter Your First Name"%>
</div>
<div class="input-box" >
   <%# <%= f.label 'Last Name' %>
   <i class="fa fa-user"></i>
    <%= f.text_field :last_name , placeholder: "Enter Your Last Name"%>
</div>
<div class="input-box">
<i class="fas fa-envelope"></i>
   <%# <%= f.label 'Email' %>
    <%= f.text_field :email , placeholder: "Enter Your Email"%>
</div>
<div class="input-box">
<i class="fas fa-phone"></i>
   <%# <%= f.label 'Mobile No.' %>
    <%= f.number_field :phone , placeholder: "Enter Your Mobile No."%>
</div>
<div class="input-box">
<i class="fas fa-calendar-days"></i>
   <%# <%= f.label 'Date of Birth' %>
    <%= f.date_field :date_of_birth  %>
</div>
<div class="input-box">
<i class="fas fa-lock"></i>
   <%# <%= f.label 'Password' %>
    <%= f.password_field :password , placeholder: "Enter Your password" %>
</div>
<div class="input-box">
<i class="fas fa-lock"></i>
   <%# <%= f.label 'Confirm Password' %>
    <%= f.password_field :password_confirmation , placeholder: "Confirm your password" %>
</div>
<div class="button input-box">
   <%= f.submit 'Create Account' %>
</div>
<% end %>

<div class="text login-text">Already have an account?<%= link_to "Log In" , account_login_path  %></div>
